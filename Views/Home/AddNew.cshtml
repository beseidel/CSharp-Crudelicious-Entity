@model Dish
<h1>Add a new Dish!</h1>
       
<a class='btn btn-secondary' href="/">Home</a>


<div class="container">
    
    <form class='big_form' asp-controller="Home" asp-action="Add" method="POST">

        <div class="form-group">
            <span asp-validation-for="ChefName"></span>
            <label asp-for="ChefName"></label>
            <input type="text" class="form-control" id="exampleFormControlInput1" asp-for='ChefName' value="">
        </div>

        <div class="form-group">
            <span asp-validation-for="DishName"></span>
            <label asp-for="DishName"></label>
            <input type="text" class="form-control" id="exampleFormControlInput1" asp-for='DishName' value="">
        </div>

        <div class="form-group">
            <span asp-validation-for="Calories"></span>
            <label asp-for="Calories"></label>
            <input type="number" class="form-control" id="exampleFormControlInput1" asp-for='Calories' value="">
        </div>

        <div class="form-group">
            <span asp-validation-for="Tastiness"></span>
            <label asp-for="Tastiness">Tastiness</label>
            <select asp-for="Tastiness">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
            </select>
        </div>

        <div class="form-group">
            <span asp-validation-for="Descriptions"></span>
            <label asp-for="Descriptions"></label>
            <input type="text" class="form-control" id="exampleFormControlInput1" asp-for='Descriptions' value="">
        </div>

        <button type="submit" value='submit' class="btn btn-primary">Add Dish</button>
    </form>
</div>