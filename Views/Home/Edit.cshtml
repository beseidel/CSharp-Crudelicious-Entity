@model Dish

<a class='btn btn-secondary' href="/">Home</a>


<div class="container">
    
    <form class='big_form' action="/@Model.Id" method="POST">

        <div class="form-group">
            <span asp-validation-for="ChefName"></span>
            <label asp-for="ChefName"></label>
            <input type="text" class="form-control" id="exampleFormControlInput1" asp-for='ChefName' placeholder="@Model.ChefName">
        </div>

        <div class="form-group">
            <span asp-validation-for="DishName"></span>
            <label asp-for="DishName"></label>
            <input type="text" class="form-control" id="exampleFormControlInput1" asp-for='DishName' placeholder="@Model.DishName">
        </div>

        <div class="form-group">
            <span asp-validation-for="Calories"></span>
            <label asp-for="Calories"></label>
            <input type="number" class="form-control" id="exampleFormControlInput1" asp-for='Calories' placeholder="@Model.Calories">
        </div>

        <div class="form-group">
            <span asp-validation-for="Tastiness"></span>
            <label asp-for="Tastiness">Tastiness</label>
            <select asp-for="Tastiness">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
        </div>

        <div class="form-group">
            <span asp-validation-for="Descriptions"></span>
            <label asp-for="Descriptions">Descriptions</label>
            <textarea asp-for="Descriptions" placeholder="@Model.Descriptions"></textarea>
        </div>

        <button type="submit" value='submit' class="btn btn-primary">Edit Dish</button>
    </form>
</div>